<h2>Task</h2>
<p>Name: <%= @todo.task %></p>
<p>Description: <%= @todo.description %></p>
<p>Due Date: <%= @todo.due_date %></p>
<p>Completed: <%= @todo.completed %></p>

<p>Contacts:<br/>

  <%= render partial: 'contacts/contact',
  collection: @todo.contacts %>
</p>
<p> Not on this task:<br/>
  <%= @available_contacts.each do |contact| %>
  <%= render partial: contact %>
  <%= button_to "Assign Contact", add_todo_contact_path(contact_id: contact.id) %>
  <% end %>
</p>

<p> Delete this contact <br/>
  <%= @available_contacts.each do |contact| %>
  <%= render partial: contact %>
  <%= button_to "Delete Contact", delete_todo_contact_path(contact_id: contact.id) %>

  <% end %>

</p>


<a href="/todos/<%= @todo.id %>/edit">Edit Task</a>
<br/><br/>
<form action="/todos/<%= @todo.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button>Delete Task</button>
</form>